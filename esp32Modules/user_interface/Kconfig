menu "UI Config"

    config UI_NUM_CMDS
        int "UI Max number of commands"
        range 4 64
        default 16
        help
            Max number of ui commands


    config UI_NUM_LINE_BUFF
        int "UI Max number of line buffer lines"
        range 32 256
        default 64
        help
            Max number of line buffer lines

    config UI_EVENT_Q_SIZE
        int "UI Event Queue Size"
        range 2 32
        default 8
        help
            Event Q Size

    config UI_EVENT_HNDLR_PRIO
        int "UI Event handler task Prio"
        range 1 20
        default 10
        help
            Event Handler task priority

endmenu
